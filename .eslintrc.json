{
  "env": {
    "es2020": true,
    "node": true,
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "ignorePatterns": [
    "*.test.js"
  ],
  "rules": {
    "react/prop-types": [
      "off"
    ]
  }
}
